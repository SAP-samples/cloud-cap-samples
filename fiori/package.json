{
  "name": "@capire/fiori",
  "version": "1.0.0",
  "dependencies": {
    "@capire/bookstore": "*",
    "@sap/cds": ">=5",
    "@sap/cds-odata-v2-adapter-proxy": "^1.8.13",
    "express": "^4.17.1",
    "passport": ">=0.4.1"
  },
  "scripts": {
    "start": "cds run --in-memory?",
    "watch": "cds watch"
  },
  "cds": {
    "requires": {
      "db": "sql",
      "ReviewsService": {
        "kind": "odata",
        "model": "@capire/reviews"
      },
      "OrdersService": {
        "kind": "odata",
        "model": "@capire/orders"
      },
      "messaging": {
        "[production]": {
          "kind": "enterprise-messaging"
        },
        "[development]": {
          "kind": "file-based-messaging"
        },
        "[hybrid!]": {
          "kind": "enterprise-messaging-shared"
        }
      },

      "toggles": true,
      "cds.xt.ModelProviderService": "from-sidecar",
      "auth": {
        "users": {
          "carol": { "tenant": "t1" },
          "erin":  { "tenant": "t2" },
          "fred": { "tenant": "t1", "features":[] }
        },
        "tenants": {
          "t1": { "features": ["isbn"] },
          "t2": { "features": "*" }
        }
      },
      "[mtx]": {
        "extensions": false,
        "extensibility": false,
        "multitenancy": false,
        "[sidecar]": {
          "model-provider": "from-sidecar"
        }
      },
      "db-ext": {
        "[development]": {
          "model": "db/sqlite"
        },
        "[production]": {
          "model": "db/hana"
        }
      }
    }
  }
}
