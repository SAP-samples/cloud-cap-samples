{
  "name": "@capire/bookstore",
  "version": "1.0.0",
  "dependencies": {
    "@capire/bookshop": "*",
    "@capire/reviews": "*",
    "@capire/orders": "*",
    "@capire/common": "*",
    "@capire/data-viewer": "*",
    "@sap-cloud-sdk/http-client": "^3.24.0",
    "@sap-cloud-sdk/resilience": "^3.24.0",
    "@sap/cds": ">=5",
    "express": "^4.17.1"
  },
  "cds": {
    "requires": {
      "ReviewsService": {
        "kind": "odata",
        "model": "@capire/reviews",
        "credentials": {
          "destination": "reviews-dest",
          "path": "/reviews"
        }
      },
      "OrdersService": {
        "kind": "odata",
        "model": "@capire/orders",
        "credentials": {
          "destination": "orders-dest",
          "path": "/odata/v4/orders"
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "db": "hana",
        "messaging": "enterprise-messaging"
      },
      "sql": {
        "native_hana_associations": false
      }
    },
    "log": { "service": true }
  },
  "scripts": {
    "start": "cds-serve"
  }
}